{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachines_Arruda_name": {
            "defaultValue": "Arruda",
            "type": "String"
        },
        "networkInterfaces_arruda375_externalid": {
            "defaultValue": "/subscriptions/aed0216b-97a1-4223-9b2a-432842857f74/resourceGroups/VMS-SERASA/providers/Microsoft.Network/networkInterfaces/arruda375",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[parameters('virtualMachines_Arruda_name')]",
            "location": "brazilsouth",
            "tags": {
                "{\"Projeto\": \"RPA\",  \"centro-custo\":": "\"00085005.00N\"} Devops"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2s"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsDesktop",
                        "offer": "Windows-10",
                        "sku": "20h1-pro",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[parameters('virtualMachines_Arruda_name')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://vmsserasadisks.blob.core.windows.net/vhds/', parameters('virtualMachines_Arruda_name'), '20210204155605.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "diskSizeGB": 127
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_Arruda_name')]",
                    "adminUsername": "administrador",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaces_arruda375_externalid')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "https://vmsserasadiag.blob.core.windows.net/"
                    }
                },
                "licenseType": "Windows_Client"
            }
        }
    ]
}